{
  "compilerOptions": {                 
    "target": "es5",                          
    "module": "commonjs",                     
    "strict": true,                           
    "esModuleInterop": true,
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": [
    ".env",
    "views/*",
    "*.ts",
    "model/*.ts",
    "controller/*.ts",
    "public",
    "routes/*.ts",
  ]
}
